<h1>Posts Index</h1>
<hr>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>*</th>
        <th>제목</th>
        <th>작성자</th>
        <th>작성시간</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each_with_index do |p,index| %>
      <tr>
        <td><%= (@posts.length-index) %></td>
        <td><%=link_to p.title, p%></td>
        <td><%=p.user.email%></td>
        <td><%=local_time(p.created_at)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @posts %>
</div>
